<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

<div class="container mt-2">
  <div class="form-group">
    <span>APPROVED?</span>
    <%= checkbox f, :approved, class: "checkbox" %>
    <%= error_tag f, :approved %>
    â€”
    <span>PATREON REWARD?</span>
    <%= checkbox f, :patreon, class: "checkbox" %>
    <%= error_tag f, :patreon %>
  </div>
  <div class="row">
    <div class="col">
      <%= text_input f, :family, class: "form-control", placeholder: "Family Name" %>
      <%= error_tag f, :family %>
      <%= text_input f, :name, class: "form-control", placeholder: "Personal Name" %>
      <%= error_tag f, :name %>
      <%= text_input f, :clan, class: "form-control", placeholder: "Clan" %>
      <%= error_tag f, :clan %>
    </div>
    <div class="col mt-4">
      <strong>Honor:</strong>
      <%= number_input f, :honor, class: "form-control character-edit-numeric" %>
      <%= error_tag f, :honor %>
    </div>
    <div class="col mt-4">
      <strong>Glory:</strong>
      <%= number_input f, :glory, class: "form-control character-edit-numeric" %>
      <%= error_tag f, :glory %>
    </div>
    <div class="col mt-4">
      <strong>Status:</strong>
      <%= number_input f, :status, class: "form-control character-edit-numeric" %>
      <%= error_tag f, :status %>
    </div>
    <div class="col mt-4">
      <strong>Void Points: </strong>
      <%= number_input f, :void_points, class: "form-control character-edit-numeric" %>
      <%= error_tag f, :void_points %>
