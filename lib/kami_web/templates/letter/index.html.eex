<h2>Listing Letters</h2>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Description</th>
      <th>To postmaster</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for letter <- @letters do %>
    <tr>
      <td><%= letter.text %></td>
      <td><%= letter.description %></td>
      <td><%= letter.to_postmaster %></td>

      <td class="text-right">
        <span><%= link "Show", to: letter_path(@conn, :show, letter), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: letter_path(@conn, :edit, letter), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: letter_path(@conn, :delete, letter), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Letter", to: letter_path(@conn, :new) %></span>
